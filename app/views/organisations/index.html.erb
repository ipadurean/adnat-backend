<h1><u>Adnat</u></h1>
<span>Logged in as </span><b><%= @user.name %></b>
<%= link_to "Log Out", logout_path, method: :delete %><br>


<% if @user.organisation_id != nil %>
   <h2><%= @organisations.select{ |org| org.id == @user.organisation_id}[0].name %></h2>
   <%= link_to 'View Shifts', shifts_path %>&nbsp&nbsp<%= link_to 'Edit', root_path %>&nbsp&nbsp <%= link_to 'Leave', switch_organisation_path(organisation_id: nil), method: "patch" %>
  <% else %>
  
  <p>You are not a member of any organisation. Join an existing one or create a new one<p><br>
  <h2>Organisations</h2>
     <ul><% @organisations.each do |org| %></ul>
        <li><%= org.name %>&nbsp
        <%= link_to "Edit", root_path %>&nbsp
            <%= link_to 'Join', switch_organisation_path(organisation_id: org.id), method: "patch" %>
        </li>
      
        
     <% end %>
     <h2>Create organisation</h2>
<% end %>


  