<h1><u>Adnat</u></h1>
<h2>Log in</h2>
<% if flash[:message] %>
<div><%= flash[:message] %></div>
<% end %>

<%= form_tag '/login' do %>
  <div>
  <%= label_tag :Email %><br>
  <%= text_field_tag :email %><br>
  </div><br>
  <div>
  <%= label_tag :password %><br>
  <%= password_field_tag :password %><br>
  </div><br>
  <div>
  <%= check_box_tag :remember_me, 1, params[:remember_me] %><br>
  <%= label_tag :remember_me %><br>
  </div><br>
  <button type="submit">Log in</button>
<% end %><br>
<div>
<%= link_to 'Sign up', new_user_path %><br>
</div><br>
<div>
<%= link_to 'Forgot your password?', new_password_reset_path %><br>
</div><br>


